<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Transfer.TransferController"
            prefHeight="600" prefWidth="800">

    <!-- Thanh tiêu đề -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <Label text="💸 Chuyển tiền"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="15" style="-fx-padding: 30;">
            
            <Label text="Thông tin chuyển tiền" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Tài khoản nguồn -->
                <Label text="Tài khoản nguồn:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="sourceAccountBox" promptText="Chọn tài khoản" 
                          GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>
                
                <!-- Số tài khoản nhận -->
                <Label text="Số tài khoản nhận:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="destinationAccountField" promptText="Nhập số tài khoản nhận"
                           GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"/>
                
                <!-- Số tiền -->
                <Label text="Số tiền:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="amountField" promptText="Nhập số tiền"
                           GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="250"/>
                
                <!-- Nội dung -->
                <Label text="Nội dung:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextArea fx:id="messageField" promptText="Nội dung chuyển khoản"
                          GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="250" prefRowCount="3"/>
            </GridPane>

            <!-- Các nút -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
                <Button fx:id="confirmButton" text="Xác nhận" 
                        style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="cancelButton" text="Hủy" 
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
