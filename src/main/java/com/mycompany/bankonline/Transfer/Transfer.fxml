<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.Transfer.TransferController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="60" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <children>
                <Label layoutX="27.0" layoutY="21.0" style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Bank Transfer" textFill="WHITE" />
                <Button fx:id="logoutButton" layoutX="686.0" layoutY="26.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout" />
            </children>
        </AnchorPane>
    </top>

    <!-- Sidebar -->
    <left>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: Gray;" BorderPane.alignment="CENTER">
            
        <Button fx:id="accountButton" layoutX="-17.0" layoutY="57.0" maxWidth="Infinity" prefHeight="50.0" prefWidth="217.0" style="-fx-background-color: transparent;" styleClass="sidebar-button" text="Account">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Button>
        <Button fx:id="transferButton" layoutX="-17.0" layoutY="191.0" maxWidth="Infinity" prefHeight="43.0" prefWidth="217.0" style="-fx-background-color: transparent;" styleClass="sidebar-button" text="  Transfer">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Button>
        <Button fx:id="historyButton" layoutX="-17.0" layoutY="149.0" maxWidth="Infinity" prefHeight="42.0" prefWidth="217.0" style="-fx-background-color: transparent;" styleClass="sidebar-button" text="History">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Button>
        <Button fx:id="cardButton" layoutX="-45.0" layoutY="107.0" maxWidth="Infinity" prefHeight="42.0" prefWidth="217.0" style="-fx-background-color: transparent;" styleClass="sidebar-button" text="💳   Card">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Button>
        <Button fx:id="homeButton" layoutX="-45.0" layoutY="14.0" maxWidth="Infinity" prefHeight="51.0" prefWidth="217.0" style="-fx-background-color: transparent;" styleClass="sidebar-button" text="   🏠  Home">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Button>
      </AnchorPane>
    </left>

    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Chuyển tiền" />

            <VBox style="-fx-background-color: #D6EAF8; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Số dư hiện tại" style="-fx-font-weight: bold;"/>
                <Label fx:id="currentBalanceLabel" text="15,000,000 VND" style="-fx-font-size: 18px; -fx-text-fill: #2E86C1;"/>
            </VBox>

            <VBox spacing="15">

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Tài khoản người nhận:" />
                    <TextField fx:id="recipientAccountField" promptText="Nhập số tài khoản" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Số tiền:" />
                    <TextField fx:id="amountField" promptText="Nhập số tiền" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Nội dung chuyển tiền:" />
                    <TextField fx:id="noteField" promptText="Ví dụ: Thanh toán hóa đơn" />
                </VBox>

                <Button fx:id="transferButtonSubmit" prefWidth="200" style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold;" text="Chuyển tiền" />
            </VBox>

            <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />
        </VBox>
    </center>

</BorderPane>
