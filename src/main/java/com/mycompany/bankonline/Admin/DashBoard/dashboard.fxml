<?xml version="1.0" encoding="UTF-8"?>

<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Admin.DashBoard.ControllerDashboard"
         prefWidth="1200.0" prefHeight="800.0">

    <tabs>
        <!-- Tab Users -->
        <Tab text="Users">
            <AnchorPane>
                <VBox spacing="10.0" padding="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    <Label text="User Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="10">
                        <TextField fx:id="txtSearchUser" promptText="Search by phone or name..." />
                        <Button text="Search" onAction="#onSearchUser"/>
                        <Button text="Add User" onAction="#onAddUser"/>
                        <Button text="Block User" onAction="#onBlockUser"/>
                    </HBox>

                    <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colUserId" text="User ID" prefWidth="80"/>
                            <TableColumn fx:id="colFullName" text="Full Name" prefWidth="150"/>
                            <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                            <TableColumn fx:id="colCitizenId" text="Citizen ID" prefWidth="150"/>
                            <TableColumn fx:id="colAccountType" text="Account Type" prefWidth="100"/>
                            <TableColumn fx:id="colBalance" text="Balance" prefWidth="100"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </Tab>

        <!-- Tab Cards -->
        <Tab text="Cards">
            <AnchorPane>
                <VBox spacing="10.0" padding="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    <Label text="Card Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="10">
                        <TextField fx:id="txtSearchCard" promptText="Search by card number..." />
                        <Button text="Search" onAction="#onSearchCard"/>
                        <Button text="Add Card" onAction="#onAddCard"/>
                        <Button text="Block Card" onAction="#onBlockCard"/>
                    </HBox>

                    <TableView fx:id="tblCards" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCardId" text="Card ID" prefWidth="80"/>
                            <TableColumn fx:id="colUserIdCard" text="User ID" prefWidth="80"/>
                            <TableColumn fx:id="colCardNumber" text="Card Number" prefWidth="150"/>
                            <TableColumn fx:id="colCardType" text="Card Type" prefWidth="100"/>
                            <TableColumn fx:id="colExpiredDate" text="Expired Date" prefWidth="120"/>
                            <TableColumn fx:id="colStatusCard" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </Tab>

        <!-- Tab Transactions -->
        <Tab text="Transactions">
            <AnchorPane>
                <VBox spacing="10.0" padding="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    <Label text="Transaction Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="10">
                        <DatePicker fx:id="dpFrom" promptText="From Date"/>
                        <DatePicker fx:id="dpTo" promptText="To Date"/>
                        <Button text="Filter" onAction="#onFilterTransactions"/>
                        <Button text="Refresh" onAction="#onRefreshTransactions"/>
                    </HBox>

                    <TableView fx:id="tblTransactions" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colTransId" text="Transaction ID" prefWidth="120"/>
                            <TableColumn fx:id="colFromUser" text="From User" prefWidth="100"/>
                            <TableColumn fx:id="colToUser" text="To User" prefWidth="100"/>
                            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
                            <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                            <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
                            <TableColumn fx:id="colStatusTrans" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </AnchorPane>
        </Tab>

        <!-- Tab Reports -->
        <Tab text="Reports">
            <AnchorPane>
                <VBox spacing="10.0" padding="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    <Label text="Reports And Statistics" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="20">
                        <Label fx:id="lblTotalUsers" text="Total Users: 0"/>
                        <Label fx:id="lblTotalCards" text="Total Cards: 0"/>
                        <Label fx:id="lblTotalBalance" text="Total Balance: 0"/>
                    </HBox>

                    <!-- Placeholder cho biểu đồ -->
                    <StackPane VBox.vgrow="ALWAYS" style="-fx-border-color: lightgray; -fx-border-style: dashed;">
                        <Label text="Charts will be displayed here"/>
                    </StackPane>
                </VBox>
            </AnchorPane>
        </Tab>
    </tabs>
</TabPane>
