<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="900" prefHeight="600"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.DashBoard.DashBoardController"
            styleClass="dashboard-root">

    <top>
        <AnchorPane prefHeight="70" styleClass="header-container">
            <children>
                <Label layoutX="30" layoutY="20" text="🏦 BASOUR BANK" styleClass="header-title"/>
                <Label layoutX="400" layoutY="25" text="Dashboard" styleClass="header-subtitle"/>
                <Button fx:id="logoutButton" layoutX="750" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <left>
        <AnchorPane prefHeight="600" prefWidth="200"
                    styleClass="sidebar-container"
                    BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Button fx:id="homeButton" text="🏠  Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="👤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="💸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="💰  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="💵  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="🧾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="📜  History" prefWidth="180" styleClass="sidebar-button"/>

            </VBox>
        </AnchorPane>
    </left>

    <!-- 🏦 MAIN CONTENT -->
    <center>
        <VBox spacing="25" styleClass="main-content" alignment="TOP_CENTER">
            
            <!-- Greeting the user -->
            <Label fx:id="helloField" text="Hello, -------!" styleClass="greeting-label"/>

            <!-- Main Information -->
            <HBox spacing="20" alignment="CENTER">
                <VBox prefWidth="250" styleClass="info-box" alignment="CENTER">
                    <!-- Title line + eye icon 👁 -->
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="Current Balance" styleClass="info-title"/>
                        <Button fx:id="toggleBalanceButton"
                                text="Show"
                                styleClass="toggle-button"
                                style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 0;" />
                    </HBox>

                    <!-- Balance amount -->
                    <Label fx:id="balanceField" text="•••••••• VND" styleClass="info-value"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Account Number" styleClass="info-title"/>
                    <Label fx:id="accountNumberField" text="8888.3636.8888" styleClass="info-value"/>
                </VBox>
            </HBox>

            <!-- Notifications -->
            <TitledPane fx:id="notificationPane" expanded="true" text="🔔 New Notifications" styleClass="notification-pane">
                <content>
                    <VBox fx:id="notificationBox" spacing="10" styleClass="notification-box"/>
                </content>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>
