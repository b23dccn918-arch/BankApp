<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="800" prefHeight="600"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.DashBoard.DashBoardController"
            styleClass="dashboard-root">

    <!-- Sidebar trái -->
    <left>
        <VBox spacing="15" styleClass="sidebar-container" prefWidth="200" alignment="TOP_CENTER">
            <Label text="BASOUR BANK" styleClass="sidebar-logo"/>
            <Button fx:id="homeButton" text="🏠   Home" styleClass="sidebar-button"/>
            <Button fx:id="accountButton" text="👤   Account" styleClass="sidebar-button"/>
            <Button fx:id="transferButton" text="💸   Transfer" styleClass="sidebar-button"/>
            <Button fx:id="withdrawButton" text="💰   Withdraw" styleClass="sidebar-button"/>
            <Button fx:id="depositButton" text="💵   Deposit" styleClass="sidebar-button"/>
            <Button fx:id="paymentButton" text="🧾   Payment" styleClass="sidebar-button"/>
            <Button fx:id="historyButton" text="📜   History" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Header -->
    <top>
        <HBox styleClass="header-container" spacing="10" alignment="CENTER_RIGHT" prefHeight="60">
            <Label fx:id="helloField" text="Xin chào, -------!" styleClass="header-greeting"/>
            <Button fx:id="logoutButton" text="Logout" styleClass="btn-logout"/>
        </HBox>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="20" styleClass="main-content" alignment="TOP_CENTER">

            <HBox spacing="20">
                <VBox styleClass="info-box">
                    <Label text="Số dư hiện tại" styleClass="info-title"/>
                    <Label fx:id="balanceField" text="15,000,000 VND" styleClass="info-value"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Số tài khoản" styleClass="info-title"/>
                    <Label fx:id="accountNumberField" text="8888.3636.8888" styleClass="info-value"/>
                </VBox>
            </HBox>

            <TitledPane fx:id="notificationPane" expanded="true" text="Thông báo mới" styleClass="notification-pane">
                <content>
                    <VBox fx:id="notificationBox" spacing="5" styleClass="notification-box"/>
                </content>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
