<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.Transfer.TransferController">

    <!-- Top bar -->
    <top>
      <AnchorPane prefHeight="26.0" prefWidth="1021.0" style="-fx-background-color: #2E86C1; -fx-padding: 15;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="36.0" layoutY="29.0" text="Bank" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" layoutX="682.0" layoutY="35.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text=" Logout">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </top>

    <!-- Sidebar -->
    <left>
    <AnchorPane prefHeight="600.0" prefWidth="200.0"
                style="-fx-background-color: #34495E;"
                BorderPane.alignment="CENTER">

        <VBox spacing="15" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <!-- Home -->
            <Button fx:id="homeButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🏠   Home">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Account -->
            <Button fx:id="accountButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="👤   Account">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Transfer -->
            <Button fx:id="transferButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💸   Transfer">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Withdraw -->
            <Button fx:id="withdrawButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💰   Withdraw">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Deposit -->
            <Button fx:id="depositButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💵   Deposit">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Payment -->
            <Button fx:id="paymentButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🧾   Payment">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- History -->
            <Button fx:id="historyButton" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="📜   History">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

        </VBox>
    </AnchorPane>
</left>


    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Chuyển tiền" />

            <HBox spacing="20">
                <VBox prefWidth="200" style="-fx-background-color: #D6EAF8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Số dư hiện tại" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #2E86C1;" text="15,000,000 VND" />
                </VBox>
                
                <!-- <VBox prefWidth="200" style="-fx-background-color: #FADBD8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Thẻ tín dụng" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #C0392B;" text="5,000,000 VND" />
                </VBox> -->
            </HBox>

            <VBox spacing="15">

    <!-- Nhập số điện thoại hoặc tài khoản người nhận -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label style="-fx-font-weight: bold;" text="Số  tài khoản người nhận:" />
            <TextField fx:id="recipientAccountField" promptText="Nhập số điện thoại hoặc số tài khoản" />
            </VBox>

            <!-- Nhập số tiền cần chuyển -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label style="-fx-font-weight: bold;" text="Số tiền cần chuyển:" />
                <TextField fx:id="amountField" promptText="Nhập số tiền cần chuyển" />
            </VBox>

            <!-- Nội dung chuyển khoản -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label style="-fx-font-weight: bold;" text="Nội dung chuyển khoản:" />
                <TextField fx:id="messageField" promptText="Nhập nội dung (tùy chọn)" />
            </VBox>

                <Button fx:id="transferButtonSubmit" prefWidth="200" style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold;" text="Chuyển tiền" />
            </VBox>

            <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />
        </VBox>
    </center>

</BorderPane>
