<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.Transfer.TransferController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="60" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <children>
                <Label layoutX="27.0" layoutY="21.0" style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Bank Transfer" textFill="WHITE" />
                <Button fx:id="logoutButton" layoutX="686.0" layoutY="26.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout" />
            </children>
        </AnchorPane>
    </top>

    <!-- Sidebar -->
    <left>
    <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #34495E;" BorderPane.alignment="CENTER">
        <!-- Home -->
            <Button fx:id="homeButton" layoutX="0.0" layoutY="20.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🏠   Home">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Account -->
            <Button fx:id="accountButton" layoutX="0.0" layoutY="75.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="👤   Account">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Card -->
            <Button fx:id="cardButton" layoutX="0.0" layoutY="130.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💳   Card">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Transfer -->
            <Button fx:id="transferButton" layoutX="0.0" layoutY="185.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💸   Transfer">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Withdraw -->
            <Button fx:id="withdrawButton" layoutX="0.0" layoutY="240.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💰   Withdraw">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Deposit -->
            <Button fx:id="depositButton" layoutX="0.0" layoutY="295.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💵   Deposit">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Payment -->
            <Button fx:id="paymentButton" layoutX="0.0" layoutY="350.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🧾   Payment">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- History -->
            <Button fx:id="historyButton" layoutX="0.0" layoutY="405.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="📜   History">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>
        </AnchorPane>
    </left>


    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Chuyển tiền" />

            <VBox style="-fx-background-color: #D6EAF8; -fx-padding: 15; -fx-background-radius: 10;">
                <Label text="Số dư hiện tại" style="-fx-font-weight: bold;"/>
                <Label fx:id="currentBalanceLabel" text="15,000,000 VND" style="-fx-font-size: 18px; -fx-text-fill: #2E86C1;"/>
            </VBox>

            <VBox spacing="15">

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Số điện thoại:" />
                    <TextField fx:id="recipientAccountField" promptText="Nhập Số điện thoại" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Số tiền cần rút:" />
                    <TextField fx:id="amountField" promptText="Nhập số tiền cần rút" />
                </VBox>

                <Button fx:id="transferButtonSubmit" prefWidth="200" style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold;" text="Chuyển tiền" />
            </VBox>

            <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />
        </VBox>
    </center>

</BorderPane>
