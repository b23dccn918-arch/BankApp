<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.Transfer.TransferController"
            styleClass="mainFxmlClass">

    <!-- 🔷 TOP BAR -->
    <top>
        <AnchorPane prefHeight="70.0" styleClass="header-container">
            <children>
                <!-- Logo / Bank name -->
                <Label layoutX="30" layoutY="20" text="🏦 BASOUR BANK" styleClass="header-title"/>

                <!-- Current page title -->
                <Label layoutX="380" layoutY="25" text="Transfer" styleClass="header-subtitle"/>

                <!-- Logout button -->
                <Button fx:id="logoutButton" layoutX="750" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <!-- 🧭 SIDEBAR -->
    <left>
        <AnchorPane prefHeight="600" prefWidth="200" styleClass="sidebar-container" BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Button fx:id="homeButton" text="🏠  Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="👤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="💸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="💰  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="💵  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="🧾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="📜  History" prefWidth="180" styleClass="sidebar-button"/>
            </VBox>
        </AnchorPane>
    </left>

    <!-- 💸 MAIN CONTENT -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <!-- Page Title -->
            <Label text="TRANSFER MONEY" styleClass="page-title"/>

            <!-- Balance Information -->
            <HBox spacing="20">
                <VBox prefWidth="250" styleClass="info-box">
                    <Label text="Current Balance" styleClass="info-title"/>
                    <Label fx:id="balanceField" text="15,000,000 VND" styleClass="info-value"/>
                </VBox>
            </HBox>

            <!-- Transfer Form -->
            <VBox spacing="15">
            
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Recipient Account Number:" styleClass="form-label"/>
                    <TextField fx:id="recipientAccountField" promptText="Enter recipient account number" styleClass="form-field"/>
                    <Label fx:id="recipientNameLabel" text="" style="-fx-text-fill: #2a72de; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Transfer Amount:" styleClass="form-label"/>
                    <TextField fx:id="amountField" promptText="Enter amount to transfer" styleClass="form-field"/>
                </VBox>

                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Transfer Message:" styleClass="form-label"/>
                    <TextField fx:id="messageField" promptText="Enter message (optional)" styleClass="form-field"/>
                </VBox>

                <Button fx:id="transferButtonSubmit" text="Transfer" prefWidth="200" styleClass="confirm-button"/>
            </VBox>

            <!-- Transaction Status -->
            <Label fx:id="statusFailedLabel" text="" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
            <Label fx:id="statusSuccessLabel" text="" style="-fx-text-fill: green; -fx-font-weight: bold;"/>
        </VBox>
    </center>
</BorderPane>
