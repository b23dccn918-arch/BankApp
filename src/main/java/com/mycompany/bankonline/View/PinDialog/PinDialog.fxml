<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.bankonline.Controller.PinDialog.PinDialogController"
      alignment="CENTER" spacing="15" prefWidth="300" prefHeight="200"
      style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;">

    <Label text="Enter your PIN to confirm the transaction" wrapText="true"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <PasswordField fx:id="pinField" promptText="Enter 6 digits"
                   style="-fx-font-size: 16px; -fx-alignment: center; -fx-pref-width: 200;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="confirmButton" text="Confirm"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Cancel"
                style="-fx-background-color: #E53935; -fx-text-fill: white;"/>
    </HBox>

    <Hyperlink fx:id="forgotPinLink" text="Forgot PIN?"
               style="-fx-text-fill: #0078D7; -fx-font-size: 12px;"/>

    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
