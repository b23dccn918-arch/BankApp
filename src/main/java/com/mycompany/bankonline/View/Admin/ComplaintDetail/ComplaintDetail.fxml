<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.bankonline.Controller.Admin.ComplaintDetailController"
            prefWidth="480" prefHeight="400">

    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label text="Complaint Detail"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10">
            <Label text="Status:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblStatus"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Subject:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblSubject"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Created at:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblCreatedAt"/>
        </HBox>

        <Label text="Complaint content:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="txtContent" editable="false" wrapText="true" prefHeight="80"/>

        <Label text="Admin note:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="txtAdminNote" wrapText="true" promptText="Enter response here..." prefHeight="80"/>

        <HBox spacing="10">
            <Button text="Mark as Rejected"
                    onAction="#markRejected"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Mark as Resolved"
                    onAction="#markResolved"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Save Note"
                    onAction="#saveAdminNote"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Close"
                    onAction="#closeWindow"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>
