<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.Payment.PaymentController"
            styleClass="payment-root">

    <!-- 🔷 HEADER -->
    <top>
        <AnchorPane prefHeight="70" styleClass="header-container">
            <children>
                <Label layoutX="30" layoutY="20" text="🏦 BASOUR BANK" styleClass="header-title"/>
                <Label layoutX="400" layoutY="25" text="Payment" styleClass="header-subtitle"/>
                <Button fx:id="logoutButton" layoutX="750" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <!-- 🧭 SIDEBAR -->
    <left>
        <AnchorPane prefHeight="600" prefWidth="200"
                    styleClass="sidebar-container"
                    BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Button fx:id="homeButton" text="🏠  Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="👤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="💸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="💰  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="💵  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="🧾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="📜  History" prefWidth="180" styleClass="sidebar-button"/>
            </VBox>
        </AnchorPane>
    </left>

    <!-- 💳 MAIN CONTENT -->
    <center>
        <VBox spacing="25" styleClass="main-content" alignment="TOP_CENTER">

            <Label text="THANH TOÁN HÓA ĐƠN" styleClass="page-title"/>

            <!-- Số dư -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="info-box">
                    <Label text="Số dư hiện tại" styleClass="info-title"/>
                    <Label fx:id="balanceField" text="15,000,000 VND" styleClass="info-value"/>
                </VBox>
            </HBox>

            <!-- Form -->
            <VBox spacing="15" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Mã hóa đơn:" styleClass="form-label"/>
                    <ComboBox fx:id="billIdCombo" promptText="Chọn mã hóa đơn"
                              prefWidth="200" styleClass="form-field"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Lọc theo trạng thái:" styleClass="form-label"/>
                    <ComboBox fx:id="statusFilterCombo" promptText="Tất cả"
                              prefWidth="200" styleClass="form-field"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="payBillButton" text="Thanh toán hóa đơn" styleClass="confirm-button"/>
                    <Button fx:id="refreshButton" text="Làm mới" styleClass="refresh-button"/>
                </HBox>

                <!-- Bảng -->
                <TableView fx:id="billTable" prefHeight="320" styleClass="bill-table">
                    <columns>
                        <TableColumn fx:id="billIdCol" text="Mã hóa đơn" prefWidth="100"/>
                        <TableColumn fx:id="billTypeCol" text="Loại hóa đơn" prefWidth="150"/>
                        <TableColumn fx:id="billAmountCol" text="Số tiền (VND)" prefWidth="120"/>
                        <TableColumn fx:id="billStatusCol" text="Trạng thái" prefWidth="100"/>
                        <TableColumn fx:id="billDueCol" text="Hạn thanh toán" prefWidth="150"/>
                        <TableColumn fx:id="billCreatedCol" text="Ngày tạo" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
