<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="AnchorPane" prefHeight="600" prefWidth="800" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.Payment.PaymentController">

    <!-- Nội dung chính -->
    <center>
        <AnchorPane prefHeight="600" prefWidth="800" style="-fx-padding: 20;">
            <children>
                <VBox layoutX="10" layoutY="10" spacing="20">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Thanh toán hoá đơn" />
                    <!-- Tiêu đề -->

                    <!-- Form nhập thông tin -->
                    <HBox spacing="15">
                    <VBox spacing="10">
                        <Label text="Mã hoá đơn:" />
                    </VBox>
                    <VBox spacing="10">
                        <ComboBox fx:id="billIdCombo" prefWidth="200" promptText="Chọn mã hoá đơn" />
                    </VBox>
                </HBox>

                <HBox spacing="15">
                    <Button fx:id="payBillButton" text="Thanh toán hoá đơn"
                            style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold;" />
                    <Button fx:id="refreshButton" text="Làm mới"
                            style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-weight: bold;" />
                </HBox>

                <TableView fx:id="billTable" prefHeight="350">
                    <columns>
                        <TableColumn fx:id="billIdCol" text="Mã hoá đơn" prefWidth="100"/>
                        <TableColumn fx:id="billTypeCol" text="Loại hoá đơn" prefWidth="150"/>
                        <TableColumn fx:id="billAmountCol" text="Số tiền (VND)" prefWidth="120"/>
                        <TableColumn fx:id="billStatusCol" text="Trạng thái" prefWidth="100"/>
                        <TableColumn fx:id="billDueCol" text="Hạn thanh toán" prefWidth="150"/>
                        <TableColumn fx:id="billCreatedCol" text="Ngày tạo" prefWidth="150"/>
                    </columns>
                </TableView>
                </VBox>
            </children>
        </AnchorPane>
    </center>


   <top>
      <AnchorPane prefHeight="26.0" prefWidth="1021.0" style="-fx-background-color: #2E86C1; -fx-padding: 15;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="36.0" layoutY="29.0" text="Bank" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" layoutX="894.0" layoutY="33.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text=" Logout">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </top>
   <left>
    <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #34495E;" BorderPane.alignment="CENTER">

        <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="20">

            <!-- Home -->
            <Button fx:id="homeButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="🏠   Home">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Account -->
            <Button fx:id="accountButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="👤   Account">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Transfer -->
            <Button fx:id="transferButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="💸   Transfer">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Withdraw -->
            <Button fx:id="withdrawButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="💰   Withdraw">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Deposit -->
            <Button fx:id="depositButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="💵   Deposit">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Payment -->
            <Button fx:id="paymentButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="🧾   Payment">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- History -->
            <Button fx:id="historyButton" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="sidebar-button" text="📜   History">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

        </VBox>
    </AnchorPane>
</left>

    <!-- <stylesheets>
        <URL value="@DashBoard.css" />
    </stylesheets> -->
</BorderPane>
