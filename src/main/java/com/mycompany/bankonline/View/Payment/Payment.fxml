<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.Payment.PaymentController"
            styleClass="payment-root">

    <!-- ðŸ”· HEADER -->
    <top>
        <AnchorPane prefHeight="70" styleClass="header-container">
            <children>
                <Label layoutX="30" layoutY="20" text="ðŸ¦ BASOUR BANK" styleClass="header-title"/>
                <Label layoutX="400" layoutY="25" text="Payment" styleClass="header-subtitle"/>
                <Button fx:id="logoutButton" layoutX="750" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <!-- ðŸ§­ SIDEBAR -->
    <left>
        <AnchorPane prefHeight="600" prefWidth="200"
                    styleClass="sidebar-container"
                    BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Button fx:id="homeButton" text="ðŸ   Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="ðŸ‘¤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="ðŸ’¸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="ðŸ’°  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="ðŸ’µ  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="ðŸ§¾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="ðŸ“œ  History" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="complaintButton" text="âœ‰ï¸  Complaint" prefWidth="180" styleClass="sidebar-button"/>
            </VBox>
        </AnchorPane>
    </left>

    <!-- ðŸ’³ MAIN CONTENT -->
    <center>
        <VBox spacing="25" styleClass="main-content" alignment="TOP_CENTER">

            <Label text="BILL PAYMENT" styleClass="page-title"/>

            <!-- Current Balance -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="info-box">
                    <Label text="Current Balance" styleClass="info-title"/>
                    <Label fx:id="balanceField" text="15,000,000 VND" styleClass="info-value"/>
                </VBox>
            </HBox>

            <!-- Form -->
            <VBox spacing="15" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Bill ID:" styleClass="form-label"/>
                    <ComboBox fx:id="billIdCombo" promptText="Select bill ID"
                              prefWidth="200" styleClass="form-field"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filter by status:" styleClass="form-label"/>
                    <ComboBox fx:id="statusFilterCombo" promptText="All"
                              prefWidth="200" styleClass="form-field"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="payBillButton" text="Pay Bill" styleClass="confirm-button"/>
                    <Button fx:id="refreshButton" text="Refresh" styleClass="refresh-button"/>
                </HBox>

                <!-- Table -->
                <TableView fx:id="billTable" prefHeight="320" styleClass="bill-table">
                    <columns>
                        <TableColumn fx:id="billIdCol" text="Bill ID" prefWidth="100"/>
                        <TableColumn fx:id="billTypeCol" text="Bill Type" prefWidth="150"/>
                        <TableColumn fx:id="billAmountCol" text="Amount (VND)" prefWidth="120"/>
                        <TableColumn fx:id="billStatusCol" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="billDueCol" text="Due Date" prefWidth="150"/>
                        <TableColumn fx:id="billPaidCol" text="Paid At" prefWidth="150" />
                        <TableColumn fx:id="billCreatedCol" text="Created At" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
