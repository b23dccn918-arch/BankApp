<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>

<BorderPane prefHeight="600" prefWidth="800" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.Withdraw.WithdrawController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="60" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <children>
                <Label layoutX="39.0" layoutY="23.0" text="Bank" textFill="WHITE">
                    <font><Font name="System Bold" size="24" /></font>
                </Label>
                <Button fx:id="logoutButton" layoutX="684.0" layoutY="25.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout">
                    <font><Font name="System Bold" size="16" /></font>
                </Button>
            </children>
        </AnchorPane>
    </top>

    <!-- Left sidebar -->
    <left>
        <AnchorPane prefHeight="600.0" prefWidth="200.0"
                    style="-fx-background-color: #34495E;"
                    BorderPane.alignment="CENTER">

            <VBox spacing="15" alignment="TOP_CENTER"
                AnchorPane.topAnchor="20"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0">

                <!-- Home -->
                <Button fx:id="homeButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="🏠   Home">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Account -->
                <Button fx:id="accountButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="👤   Account">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Transfer -->
                <Button fx:id="transferButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="💸   Transfer">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Withdraw -->
                <Button fx:id="withdrawButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="💰   Withdraw">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Deposit -->
                <Button fx:id="depositButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="💵   Deposit">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Payment -->
                <Button fx:id="paymentButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="🧾   Payment">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <!-- History -->
                <Button fx:id="historyButton" prefHeight="45.0" prefWidth="180.0"
                        style="-fx-background-color: transparent; -fx-text-fill: white;"
                        styleClass="sidebar-button" text="📜   History">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

            </VBox>
        </AnchorPane>
    </left>


    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Rút tiền" />

            <HBox spacing="20">
                <VBox prefWidth="200" style="-fx-background-color: #D6EAF8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Số dư hiện tại" />
                    <Label fx:id="balanceField" style="-fx-font-size: 18px; -fx-text-fill: #2E86C1;" text="15,000,000 VND" />
                </VBox>
                
                <!-- <VBox prefWidth="200" style="-fx-background-color: #FADBD8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Thẻ tín dụng" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #C0392B;" text="5,000,000 VND" />
                </VBox> -->
            </HBox>

            <VBox spacing="15">

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Số điện thoại:" />
                    <TextField fx:id="recipientAccountField" promptText="Nhập Số điện thoại:" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Số tiền rút:" />
                    <TextField fx:id="amountField" promptText="Nhập số tiền rút" />
                </VBox>

                <Button fx:id="transferButtonSubmit" prefWidth="200" style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold;" text="Rút tiền" />
            </VBox>

            <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />
        </VBox>
    </center>




</BorderPane>
