<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1000"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.History.HistoryController"
            styleClass="history-root">

    <!-- ðŸ”· HEADER -->
    <top>
        <AnchorPane prefHeight="70" styleClass="header-container">
            <children>
                <Label layoutX="30" layoutY="20" text="ðŸ¦ BASOUR BANK" styleClass="header-title"/>
                <Label layoutX="420" layoutY="25" text="Transaction History" styleClass="header-subtitle"/>
                <Button fx:id="logoutButton" layoutX="850" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <!-- ðŸ§­ SIDEBAR -->
    <left>
        <AnchorPane prefHeight="600" prefWidth="200"
                    styleClass="sidebar-container"
                    BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Button fx:id="homeButton" text="ðŸ   Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="ðŸ‘¤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="ðŸ’¸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="ðŸ’°  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="ðŸ’µ  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="ðŸ§¾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="ðŸ“œ  History" prefWidth="180" styleClass="sidebar-button"/>
            </VBox>
        </AnchorPane>
    </left>

    <!-- ðŸ“œ MAIN CONTENT -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <Label text="TRANSACTION HISTORY" styleClass="page-title"/>

            <!-- Date Filter -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="From date:" styleClass="form-label"/>
                <DatePicker fx:id="fromDate" styleClass="date-picker"/>
                <Label text="To date:" styleClass="form-label"/>
                <DatePicker fx:id="toDate" styleClass="date-picker"/>
                <Button fx:id="filterButton" text="Filter" styleClass="filter-button"/>
            </HBox>

            <!-- Transaction Table -->
            <TableView fx:id="transactionTable" prefHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80" text="Transaction ID"/>
                    <TableColumn fx:id="colFrom" prefWidth="120" text="Sender"/>
                    <TableColumn fx:id="colTo" prefWidth="120" text="Receiver"/>
                    <TableColumn fx:id="colType" prefWidth="100" text="Type"/>
                    <TableColumn fx:id="colAmount" prefWidth="120" text="Amount"/>
                    <TableColumn fx:id="colDescription" prefWidth="180" text="Description"/>
                    <TableColumn fx:id="colDate" prefWidth="150" text="Created At"/>
                    <TableColumn fx:id="colStatus" prefWidth="100" text="Status"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
