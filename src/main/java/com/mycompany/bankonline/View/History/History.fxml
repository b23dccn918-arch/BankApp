<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="1000" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.History.HistoryController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="60" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <children>
                <Label layoutX="34.0" layoutY="27.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Transaction History" textFill="WHITE" />
                <Button fx:id="logoutButton" layoutX="896.0" layoutY="33.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Logout" />
            </children>
        </AnchorPane>
    </top>

    <!-- Sidebar -->
    <left>
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #34495E;" BorderPane.alignment="CENTER">
            <!-- Home -->
            <Button fx:id="homeButton" layoutX="0.0" layoutY="20.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🏠   Home">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Account -->
            <Button fx:id="accountButton" layoutX="0.0" layoutY="75.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="👤   Account">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Card -->
            <Button fx:id="cardButton" layoutX="0.0" layoutY="130.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💳   Card">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Transfer -->
            <Button fx:id="transferButton" layoutX="0.0" layoutY="185.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💸   Transfer">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Withdraw -->
            <Button fx:id="withdrawButton" layoutX="0.0" layoutY="240.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💰   Withdraw">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Deposit -->
            <Button fx:id="depositButton" layoutX="0.0" layoutY="295.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="💵   Deposit">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- Payment -->
            <Button fx:id="paymentButton" layoutX="0.0" layoutY="350.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="🧾   Payment">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>

            <!-- History -->
            <Button fx:id="historyButton" layoutX="0.0" layoutY="405.0"
                    prefHeight="45.0" prefWidth="200.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    styleClass="sidebar-button" text="📜   History">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Button>
        </AnchorPane>
    </left>


    <!-- Main content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Bộ lọc ngày -->
            <HBox spacing="10">
                <Label text="Từ ngày:" />
                <DatePicker fx:id="fromDate" />
                <Label text="Đến ngày:" />
                <DatePicker fx:id="toDate" />
                <Button fx:id="filterButton" style="-fx-background-color: #2E86C1; -fx-text-fill: white;" text="Lọc" />
            </HBox>

            <!-- Bảng giao dịch -->
            <TableView fx:id="transactionTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80" text="Mã GD" />
                    <TableColumn fx:id="colFrom" prefWidth="120" text="Người gửi" />
                    <TableColumn fx:id="colTo" prefWidth="120" text="Người nhận" />
                    <TableColumn fx:id="colType" prefWidth="100" text="Loại" />
                    <TableColumn fx:id="colAmount" prefWidth="120" text="Số tiền" />
                    <TableColumn fx:id="colDescription" prefWidth="180" text="Mô tả" />
                    <TableColumn fx:id="colDate" prefWidth="150" text="Ngày tạo" />
                    <TableColumn fx:id="colStatus" prefWidth="100" text="Trạng thái" />
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
