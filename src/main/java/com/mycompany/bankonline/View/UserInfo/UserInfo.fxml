<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.Controller.UserInfo.UserInfoController">

    <!-- Top bar -->
    <top>
        <AnchorPane prefHeight="60" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <children>
                <Label layoutX="39.0" layoutY="23.0" text="Account Infomation" textFill="WHITE">
                    <font><Font name="System Bold" size="24" /></font>
                </Label>
                <Button fx:id="logoutButton" layoutX="684.0" layoutY="25.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="logout">
                    <font><Font name="System Bold" size="16" /></font>
                </Button>
            </children>
        </AnchorPane>
    </top>

    <!-- Left sidebar -->
    <left>
    <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #34495E;" BorderPane.alignment="CENTER">
        <!-- Home -->
        <Button fx:id="homeButton" layoutX="0.0" layoutY="20.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="🏠   Home">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Account -->
        <Button fx:id="accountButton" layoutX="0.0" layoutY="75.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="👤   Account">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Card -->
        <Button fx:id="cardButton" layoutX="0.0" layoutY="130.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="💳   Card">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Transfer -->
        <Button fx:id="transferButton" layoutX="0.0" layoutY="185.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="💸   Transfer">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Withdraw -->
        <Button fx:id="withdrawButton" layoutX="0.0" layoutY="240.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="💰   Withdraw">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Deposit -->
        <Button fx:id="depositButton" layoutX="0.0" layoutY="295.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="💵   Deposit">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- Payment -->
        <Button fx:id="paymentButton" layoutX="0.0" layoutY="350.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="🧾   Payment">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- History -->
        <Button fx:id="historyButton" layoutX="0.0" layoutY="405.0"
                prefHeight="45.0" prefWidth="200.0"
                style="-fx-background-color: transparent; -fx-text-fill: white;"
                styleClass="sidebar-button" text="📜   History">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </AnchorPane>
</left>


    <!-- Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;" text="Thông tin tài khoản" />
            
            <VBox spacing="15">
                <VBox style="-fx-background-color: #F2F3F4; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Họ và tên:" />
                    <Label fx:id="fullNameLabel" text="Nguyen Van A" />
                </VBox>
                
                <VBox style="-fx-background-color: #FDFEFE; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Số điện thoại:" />
                    <Label fx:id="phoneLabel" text="0123456789" />
                </VBox>
                
                <VBox style="-fx-background-color: #F2F3F4; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="CMND/CCCD:" />
                    <Label fx:id="citizenIdLabel" text="123456789" />
                </VBox>
                
                <VBox style="-fx-background-color: #FDFEFE; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Nghề nghiệp:" />
                    <Label fx:id="jobLabel" text="Engineer" />
                </VBox>
                
                <VBox style="-fx-background-color: #F2F3F4; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Địa chỉ:" />
                    <Label fx:id="addressLabel" text="123 Nguyen Trai, Hanoi" />
                </VBox>
                
                <VBox style="-fx-background-color: #FDFEFE; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Loại tài khoản:" />
                    <Label fx:id="accountTypeLabel" text="checking" />
                </VBox>
                
                <VBox style="-fx-background-color: #F2F3F4; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Số dư:" />
                    <Label fx:id="balanceLabel" style="-fx-text-fill: #2E86C1; -fx-font-weight: bold;" text="15,000,000 VND" />
                </VBox>
                
                <VBox style="-fx-background-color: #FDFEFE; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold;" text="Trạng thái:" />
                    <Label fx:id="statusLabel" style="-fx-text-fill: green; -fx-font-weight: bold;" text="active" />
                </VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
