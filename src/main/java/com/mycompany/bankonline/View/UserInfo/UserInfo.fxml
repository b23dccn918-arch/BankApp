<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.UserInfo.UserInfoController"
            styleClass="userinfo-root">

    <!-- 🔷 HEADER -->
    <top>
        <AnchorPane prefHeight="70" styleClass="header-container">
            <children>
                <Label layoutX="30" layoutY="20" text="🏦 BASOUR BANK" styleClass="header-title"/>
                <Label layoutX="380" layoutY="25" text="User Info" styleClass="header-subtitle"/>
                <Button fx:id="logoutButton" layoutX="750" layoutY="22" text="Logout" styleClass="btn-logout"/>
            </children>
        </AnchorPane>
    </top>

    <!-- 🧭 SIDEBAR -->
    <left>
        <AnchorPane prefHeight="600" prefWidth="200" styleClass="sidebar-container" BorderPane.alignment="CENTER">
            <VBox spacing="15" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="30"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">
                <Button fx:id="homeButton" text="🏠  Home" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="accountButton" text="👤  User Info" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="transferButton" text="💸  Transfer" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="withdrawButton" text="💰  Withdraw" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="depositButton" text="💵  Deposit" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="paymentButton" text="🧾  Payment" prefWidth="180" styleClass="sidebar-button"/>
                <Button fx:id="historyButton" text="📜  History" prefWidth="180" styleClass="sidebar-button"/>
            </VBox>
        </AnchorPane>
    </left>

    <!-- 👤 MAIN CONTENT -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="main-content">
            <Label text="Thông tin người dùng" styleClass="page-title"/>

            <VBox spacing="15">
                <VBox styleClass="info-box">
                    <Label text="Họ và tên:"/>
                    <Label fx:id="fullNameLabel" text="------------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="CMND/CCCD:"/>
                    <Label fx:id="citizenIdLabel" text="----------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Nghề nghiệp:"/>
                    <Label fx:id="jobLabel" text="-----------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Giới tính:"/>
                    <Label fx:id="genderLabel" text="-----------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Ngày sinh:"/>
                    <Label fx:id="dateBirthLabel" text="------------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Địa chỉ:"/>
                    <Label fx:id="addressLabel" text="-------------"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Email:"/>
                    <Label fx:id="emailLabel" text="----------@example.com"/>
                </VBox>

                <VBox styleClass="info-box">
                    <Label text="Ngày tạo tài khoản:"/>
                    <Label fx:id="createdAtLabel" text="YYYY-MM-DD 10:00:00"/>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
