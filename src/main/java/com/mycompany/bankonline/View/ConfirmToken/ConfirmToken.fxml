<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.bankonline.Controller.ConfirmToken.ConfirmTokenController"
            stylesheets="@style/resetpassword.css">

   <children>
      <!-- Cột trái -->
      <Pane prefWidth="240.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              styleClass="left-login-container">
            <children>
                <VBox alignment="CENTER" spacing="15" layoutY="150" prefWidth="240">
                    <ImageView fitHeight="90.0" fitWidth="90.0" preserveRatio="true">
                        <image>
                            <Image url="@bank-icon-logo-design-vector.jpg" />
                        </image>
                    </ImageView>
                    <Label text="BASOUR BANK" styleClass="bank-name" />
                </VBox>
            </children>
        </Pane>

      <!-- Cột phải -->
      <Pane layoutX="230.0" prefWidth="490.0" prefHeight="480.0"
            styleClass="right-login-container" fx:id="forgotPasswordPane">
         <children>
            <VBox alignment="CENTER" spacing="15.0"
                  layoutX="80.0" layoutY="100.0" prefWidth="330.0">

               <Label text="Xác minh mã đặt lại mật khẩu"
                      style="-fx-font-size: 20px; -fx-font-weight: bold;" />

               <Label fx:id="emailLabel"
                      text="Email: user@example.com"
                      style="-fx-text-fill: #555; -fx-font-style: italic;" />
                      
                
               <Label text="Nhập mã xác nhận được gửi tới email:"
                      styleClass="label-text" />
                <Label fx:id="timerLabel" text="05:00" style="-fx-font-size: 14px; -fx-text-fill: #0c0909ff;" />

               <TextField fx:id="tokenField" promptText="Nhập mã 6 chữ số"
                          styleClass="input-field" />

               <Label fx:id="messageLabel" textFill="red" />

               <Button fx:id="confirmButton"
                       text="Xác nhận mã"
                       onAction="#handleVerify"
                       styleClass="btn-signin" />

               <Button fx:id="BackToLoginButton"
                       text="Quay lại đăng nhập"
                       onAction="#handleBackToLogin"
                       styleClass="btn-signup" />
            </VBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
