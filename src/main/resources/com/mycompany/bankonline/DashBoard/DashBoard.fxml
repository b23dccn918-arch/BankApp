<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="AnchorPane" prefHeight="768" prefWidth="1024" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bankonline.DashBoard.DashBoardController">
    <!-- Thanh trên cùng -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2E86C1; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="🏦 MyBank Dashboard" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Đăng xuất" />
        </HBox>
    </top>

    <!-- Sidebar trái -->
    <left>
        <VBox prefWidth="200" spacing="10" style="-fx-background-color: #F4F6F7; -fx-padding: 15;">
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox prefHeight="130.0" prefWidth="12.0">
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                        <Button maxWidth="Infinity" style="-fx-background-color: transparent;" text="💳 Tài khoản" />
                        <Button maxWidth="Infinity" style="-fx-background-color: transparent;" text="🏠 Trang chủ" />
                        <Button maxWidth="Infinity" style="-fx-background-color: transparent;" text="💸 Chuyển tiền" />
                        <Button maxWidth="Infinity" style="-fx-background-color: transparent;" text="📜 Lịch sử giao dịch" />
                        <Button maxWidth="Infinity" style="-fx-background-color: transparent;" text="⚙️ Cài đặt" />
                  </children>
               </VBox>
            </children>
         </HBox>
        </VBox>
    </left>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Xin chào, Khách hàng!" />
            
            <HBox spacing="20">
                <VBox prefWidth="200" style="-fx-background-color: #D6EAF8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Số dư hiện tại" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #2E86C1;" text="15,000,000 VND" />
                </VBox>
                
                <VBox prefWidth="200" style="-fx-background-color: #FADBD8; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold;" text="Số tài khoản" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #C0392B;" text="8888.9999.8888 stk trong dtb" />
                </VBox>
            </HBox>

            <TitledPane expanded="true" text="Thông báo mới">
                <content>
                    <VBox spacing="5" style="-fx-padding: 10;">
                        <Label text="• Bạn vừa nhận được 2,000,000 VND từ A." />
                        <Label text="• Thanh toán hoá đơn điện thành công." />
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </center>
    <!-- <stylesheets>
        <URL value="@DashBoard.css" />
    </stylesheets> -->
</BorderPane>
